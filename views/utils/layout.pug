    meta(content='600' property='og:image:height')
    //- Site icons
    link(rel='shortcut icon' type='image/x-icon' href='icons/favicon.ico')
    link(rel="icon" type="image/png" href="icons/touch-icon-16x16.png" sizes="16x16")
