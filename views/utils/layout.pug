    link(href='https://fonts.googleapis.com/icon?family=Material+Icons' rel='stylesheet')
    //- App manifest
    link(href='manifest.json' rel='manifest')
  body
    block content
    script.
      const useScroll = () => {
        const navbar = document.querySelector('.siteNavbar')
        if (window.scrollY === 0) navbar.setAttribute('down', false)
        if (window.scrollY !== 0) navbar.setAttribute('down', true)
      }
      document.addEventListener("scroll", useScroll)
      useScroll()
