    meta(name='description' content='Este verano domina HTML, CSS, JavaScript, React, Vue, y más')
    meta(content='Mis_Vacaciones' property='og:site_name')
    meta(content='https://LuisEnMarroquin.github.io/vacaciones-cody/' property='og:url')
    //- Thumb image
    meta(content='icons/thumb.jpg' property='og:image')
